<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt1"
                android:text="SignUp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                app:fontFamily="@font/planet3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imLogo"
                android:layout_below="@+id/txt1"
                android:layout_centerHorizontal="true"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_girl_search"/>

            <RelativeLayout
                android:id="@+id/rllogin"
                android:layout_below="@+id/imLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_text_input"
                    android:hint="Email"
                    android:layout_marginTop="20dp"
                    android:outlineSpotShadowColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_edit_text"
                        android:layout_margin="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvpassword"
                    android:hint="Password"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/name_text_input"
                    android:outlineSpotShadowColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/evpassword"
                        android:layout_margin="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvrepassword"
                    android:hint="Re-type Password"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvpassword"
                    android:outlineSpotShadowColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/evrepassword"
                        android:layout_margin="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvmobile"
                    android:hint="Re-type Password"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvrepassword"
                    android:outlineSpotShadowColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/evmobile"
                        android:layout_margin="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btlogin"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rllogin"
                android:text="SignUp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/login_button_bk"
                android:layout_width="200dp"
                android:layout_height="50dp"/>
        </RelativeLayout>
    </ScrollView>
</layout>